<Window x:Class="ImageEditor.Views.HelpDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="â“ Help" Height="500" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1E1E1E"
        WindowStyle="ToolWindow">
    <Window.Resources>
        <!-- Modern Dark Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#404040"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#505050"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#666666"/>
                                <Setter Property="Background" Value="#1A1A1A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="âŒ¨ï¸ Keyboard Shortcuts" FontSize="18" FontWeight="Bold" Foreground="#E0E0E0" Margin="0,0,0,15"/>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Shortcuts Section -->
                <Border Background="#2D2D2D" Padding="10" Margin="0,0,0,10" CornerRadius="4">
                    <StackPanel>
                        <TextBlock Text="âŒ¨ï¸ Shortcuts" FontWeight="Bold" Foreground="#E0E0E0" Margin="0,0,0,10"/>
                        <TextBlock Text="Ctrl+C   - Copy image to clipboard" Foreground="#E0E0E0" Margin="5,2,0,2" FontFamily="Consolas"/>
                        <TextBlock Text="Ctrl+V   - Paste from clipboard" Foreground="#E0E0E0" Margin="5,2,0,2" FontFamily="Consolas"/>
                        <TextBlock Text="Ctrl+Z   - Undo last action" Foreground="#E0E0E0" Margin="5,2,0,2" FontFamily="Consolas"/>
                        <TextBlock Text="Escape   - Cancel text input" Foreground="#E0E0E0" Margin="5,2,0,2" FontFamily="Consolas"/>
                    </StackPanel>
                </Border>

                <!-- Color & Size Section -->
                <Border Background="#2D2D2D" Padding="10" Margin="0,0,0,10" CornerRadius="4">
                    <StackPanel>
                        <TextBlock Text="ðŸŽ¨ Color &amp; ðŸ“ Size Settings" FontWeight="Bold" Foreground="#E0E0E0" Margin="0,0,0,10"/>
                        <TextBlock Text="The color picker and size slider apply to:" Foreground="#E0E0E0" Margin="5,2,0,8" FontSize="12"/>
                        <TextBlock Text="âœ… Highlight" Foreground="#6BFF6B" Margin="15,2,0,2"/>
                        <TextBlock Text="âœ… Circle" Foreground="#6BFF6B" Margin="15,2,0,2"/>
                        <TextBlock Text="âœ… Rectangle" Foreground="#6BFF6B" Margin="15,2,0,2"/>
                        <TextBlock Text="âœ… Arrow" Foreground="#6BFF6B" Margin="15,2,0,2"/>
                        <TextBlock Text="âœ… Text" Foreground="#6BFF6B" Margin="15,2,0,2"/>
                        <TextBlock Text="" Foreground="#E0E0E0" Margin="5,5,0,2"/>
                        <TextBlock Text="âŒ Blur" Foreground="#FF6B6B" Margin="15,2,0,2"/>
                        <TextBlock Text="(Blur uses fixed pixelation strength)" Foreground="#888888" Margin="30,2,0,2" FontSize="11" FontStyle="Italic"/>
                    </StackPanel>
                </Border>

                <!-- Quick Start Section -->
                <Border Background="#2D2D2D" Padding="10" Margin="0,0,0,10" CornerRadius="4">
                    <StackPanel>
                        <TextBlock Text="ðŸš€ Quick Start" FontWeight="Bold" Foreground="#E0E0E0" Margin="0,0,0,10"/>
                        <TextBlock Text="1. Upload an image or paste from clipboard" Foreground="#E0E0E0" Margin="5,2,0,2"/>
                        <TextBlock Text="2. Select a drawing tool" Foreground="#E0E0E0" Margin="5,2,0,2"/>
                        <TextBlock Text="3. Choose color and size (if applicable)" Foreground="#E0E0E0" Margin="5,2,0,2"/>
                        <TextBlock Text="4. Click and drag on the image to draw" Foreground="#E0E0E0" Margin="5,2,0,2"/>
                        <TextBlock Text="5. Copy to clipboard when done" Foreground="#E0E0E0" Margin="5,2,0,2"/>
                    </StackPanel>
                </Border>

                <!-- Tips Section -->
                <Border Background="#2D2D2D" Padding="10" CornerRadius="4">
                    <StackPanel>
                        <TextBlock Text="ðŸ’¡ Tips" FontWeight="Bold" Foreground="#E0E0E0" Margin="0,0,0,10"/>
                        <TextBlock Text="â€¢ Right-click canvas for quick menu" Foreground="#E0E0E0" Margin="5,2,0,2"/>
                        <TextBlock Text="â€¢ Press Enter to finish text input" Foreground="#E0E0E0" Margin="5,2,0,2"/>
                        <TextBlock Text="â€¢ Press Escape to cancel text input" Foreground="#E0E0E0" Margin="5,2,0,2"/>
                        <TextBlock Text="â€¢ Use Fit to Screen for large images" Foreground="#E0E0E0" Margin="5,2,0,2"/>
                        <TextBlock Text="â€¢ Text size is based on the slider value" Foreground="#E0E0E0" Margin="5,2,0,2"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Close Button -->
        <Button Grid.Row="2" Content="Got it!" Width="100" Height="30" HorizontalAlignment="Center" Margin="0,15,0,0" Click="BtnOK_Click" Style="{StaticResource ModernButton}"/>
    </Grid>
</Window>
